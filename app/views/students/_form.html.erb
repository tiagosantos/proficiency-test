<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> este estudante nÃ£o pode ser salvo:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <div class="col-md-4">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class =>  "form-control input-md" %>
    <%= f.label :register_number %><br>
    <%= f.text_field :register_number, :class =>  "form-control input-md" %>
    <%= f.label :status %><br>
    <%= collection_select(:student,:status,@studentstatuses,:id,:name, {}, {:class=>'form-control form-group'}) %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-12">
    <br>
    <%= f.submit  class: "btn btn-success form-group-sm" %>
    <%= link_to students_path, :class => "btn btn-danger form-group-sm" do %>
        <i class="fa fa-undo"></i><% end %>
  </div>
  </div>
<% end %>